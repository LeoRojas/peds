{% extends '::base.html.twig' %}

{% block title %}Edit Product{% endblock %}
{% block Login %}{% endblock %}
{% block stylesheets %}
<style type="text/css">
.tmargin{
margin-top: 20px;
}
#body_div
{
margin-left: 10px;
}
#edit_product_form_div label
{
{% if app.request.locale == 'es' %}
width: 30%;
{% else %}
width: 20%;
{% endif %}
}
#edit_product_form_div div
{
margin-top: 10px;
}
#edit_product_form_div input[type=text]
{
font-family:arial;
font-size: 18px;
color:black;
}
</style>
{% endblock %}
{% block body %}
<div id="body_div">
<h1>Select Product to edit</h1>
<hr>

<div id="edit_product_form_div" class="symfony-content content_l">
<form action="{{ path('peds_edit_product_aux') }}" class="ffont model_form" id="register" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <input class="tmargin peds-button-green" value="Edit Product" type="submit" />
</form>
</div>
</div>
{% endblock %}