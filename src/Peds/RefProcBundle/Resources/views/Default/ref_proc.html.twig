{% extends '::base.html.twig' %}

{% block title %}{{'rp_form.new.tab.title'|trans}}{% endblock %}
{% block Login %}{% endblock %}
{% block stylesheets %}
<style type="text/css">
.tmargin{
margin-top: 20px;
}
.ffont{
font-family:arial;
font-size: 18px;
color:black;
}
#body_div
{
margin-left: 10px;
margin-right: 10px;
}
#ReferenceProcess div
{
margin-top: 10px;
}
#ReferenceProcess input,textarea,select
{
-webkit-border-radius: 4px;
-moz-border-radius: 4px;
border-radius: 4px;
/*border: 1px solid #DADADA;*/
border: 1px solid #707070;
padding: 4px;
}
#ReferenceProcess input[type=text]
{
font-family:arial;
font-size: 18px;
color:black;
}
#ReferenceProcess label
{
/*width: 10%;*/
{% if app.request.locale == 'es' %}
width: 30%;
{% else %}
width: 20%;
{% endif %}
}
.content_l
{
width: 40%;
}
.content_c
{
width: 60%;
margin: auto;
}
</style>
{% endblock %}
{% block body %}
<div id="body_div">
<script type="text/javascript">
